{
    "name": "njcom/framework",
    "description": "Framework for building web-sites, web-applications, web-IDEs, command-line applications.",
    "type": "library",
    "license": [
        "Apache-2.0"
    ],
    "keywords": [
        "morpho",
        "ide",
        "framework",
        "cms",
        "mvc",
        "rest",
        "restful",
        "core",
        "module",
        "compiler"
    ],
    "require": {
        "php-64bit": ">=8.4",
        "ext-ctype": "*",
        "ext-date": "*",
        "ext-dom": "*",
        "ext-iconv": "*",
        "ext-libxml": "*",
        "ext-mbstring": "*",
        "ext-pcntl": "*",
        "ext-pcre": "*",
        "ext-pdo": "*",
        "ext-posix": "*",
        "ext-reflection": "*",
        "ext-session": "*",
        "ext-spl": "*",
        "ext-tokenizer": "*",
        "monolog/monolog": "dev-main",
        "nikic/fast-route": "dev-master",
        "nikic/iter": "dev-master",
        "nikic/php-parser": "^5.0",
        "symfony/yaml": "*"
    },
    "autoload": {
        "psr-4": {
            "Morpho\\": "lib/"
        },
        "files": [
            "lib/App/index.php",
            "lib/Base/index.php",
            "lib/Caching/index.php",
            "lib/Tool/index.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Morpho\\Test\\": "test"
        }
    },
    "config": {
        "discard-changes": true,
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "extra": {
        "branch-alias": {
            "dev-main": "0.x-dev"
        }
    },
    "support": {
        "issues": "https://github.com/njcom/framework/issues"
    },
    "require-dev": {
        "phpunit/phpunit": "^12.0"
    }
}
